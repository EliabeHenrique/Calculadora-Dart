import 'dart:math';

void main() {
  print('Calculadora Científica');
  print('Escolha uma operação:');
  print('1. Adição (+)');
  print('2. Subtração (-)');
  print('3. Multiplicação (*)');
  print('4. Divisão (/)');
  print('5. Potência (^)');
  print('6. Raiz Quadrada (√)');
  print('7. Seno (sin)');
  print('8. Cosseno (cos)');
  print('9. Tangente (tan)');
  print('10. Logaritmo Natural (ln)');
  print('11. Logaritmo Base 10 (log10)');
  
  final choice = int.parse(stdin.readLineSync()!);
  double result = 0.0;

  switch (choice) {
    case 1:
      result = add();
      break;
    case 2:
      result = subtract();
      break;
    case 3:
      result = multiply();
      break;
    case 4:
      result = divide();
      break;
    case 5:
      result = power();
      break;
    case 6:
      result = sqrt();
      break;
    case 7:
      result = sin();
      break;
    case 8:
      result = cos();
      break;
    case 9:
      result = tan();
      break;
    case 10:
      result = ln();
      break;
    case 11:
      result = log10();
      break;
    default:
      print('Opção inválida.');
      return;
  }

  print('Resultado: $result');
}

double add() {
  print('Digite o primeiro número:');
  double a = double.parse(stdin.readLineSync()!);
  print('Digite o segundo número:');
  double b = double.parse(stdin.readLineSync()!);
  return a + b;
}

double subtract() {
  print('Digite o primeiro número:');
  double a = double.parse(stdin.readLineSync()!);
  print('Digite o segundo número:');
  double b = double.parse(stdin.readLineSync()!);
  return a - b;
}

double multiply() {
  print('Digite o primeiro número:');
  double a = double.parse(stdin.readLineSync()!);
  print('Digite o segundo número:');
  double b = double.parse(stdin.readLineSync()!);
  return a * b;
}

double divide() {
  print('Digite o primeiro número:');
  double a = double.parse(stdin.readLineSync()!);
  print('Digite o segundo número:');
  double b = double.parse(stdin.readLineSync()!);
  if (b == 0) {
    print('Erro: Divisão por zero.');
    return double.nan;
  }
  return a / b;
}

double power() {
  print('Digite a base:');
  double base = double.parse(stdin.readLineSync()!);
  print('Digite o expoente:');
  double exponent = double.parse(stdin.readLineSync()!);
  return pow(base, exponent);
}

double sqrt() {
  print('Digite o número:');
  double number = double.parse(stdin.readLineSync()!);
  if (number < 0) {
    print('Erro: Não é possível calcular a raiz quadrada de um número negativo.');
    return double.nan;
  }
  return sqrt(number);
}

double sin() {
  print('Digite o ângulo em radianos:');
  double angle = double.parse(stdin.readLineSync()!);
  return sin(angle);
}

double cos() {
  print('Digite o ângulo em radianos:');
  double angle = double.parse(stdin.readLineSync()!);
  return cos(angle);
}

double tan() {
  print('Digite o ângulo em radianos:');
  double angle = double.parse(stdin.readLineSync()!);
  return tan(angle);
}

double ln() {
  print('Digite o número:');
  double number = double.parse(stdin.readLineSync()!);
  if (number <= 0) {
    print('Erro: O logaritmo natural só é definido para números maiores que zero.');
    return double.nan;
  }
  return ln(number);
}

double log10() {
  print('Digite o número:');
  double number = double.parse(stdin.readLineSync()!);
  if (number <= 0) {
    print('Erro: O logaritmo base 10 só é definido para números maiores que zero.');
    return double.nan;
  }
  return log(number) / log(10);
}
